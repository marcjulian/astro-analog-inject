---
import { HelloComponent } from "../components/hello.component";
import { FeaturesComponent } from "../components/features.component";

const helpText = "Helping binding";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body>
		<h1>Astro</h1>

		<!-- "client:load" works for a basic angular component -->
		<HelloComponent client:load />
		<HelloComponent client:load helpText="Helping" />
		<HelloComponent client:load helpText={helpText} />

		<FeaturesComponent client:only />
		<!-- "client_load" throw error: "NG0203: inject() must be called from an injection..."  -->
		<!-- <FeaturesComponent client:load /> -->
	</body>
</html>
